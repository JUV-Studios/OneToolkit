<Application
	x:Class="OneToolkit.Showcase.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:OneToolkit.UI.Xaml.Controls"
	xmlns:converters="using:OneToolkit.UI.Xaml.Converters">

	<Application.Resources>
		<controls:XamlControlResources>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<converters:BoolReverseConverter x:Key="BoolNegationConverter" />
					<converters:StringLocalizationConverter x:Key="ResourceLocalizationConverter" />
					<Style x:Key="ButtonsPanel" TargetType="StackPanel">
						<Setter Property="Spacing" Value="8" />
						<Setter Property="TabFocusNavigation" Value="Once" />
						<Setter Property="XYFocusKeyboardNavigation" Value="Enabled" />
					</Style>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</controls:XamlControlResources>
	</Application.Resources>
</Application>